{
  "extends": "airbnb-base",
  "rules": {
    "object-curly-newline": ["error", {
      "ObjectPattern": { "multiline": true }
    }],
    "no-unused-expressions": ["error", { "allowTernary": true }]
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "func-names": "off",
        "prefer-arrow-callback": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "env": {
    "mocha": true
  }
}
